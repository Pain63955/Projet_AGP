<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="baseAddress" class="business.excursion.Adresse" abstract="true" />
	
	<bean id="offreBali" class="business.offre.OffreSejour" scope="prototype">
	    <property name="hotel" ref="hotelBali" />
	</bean>
	
	<bean id="excursion" class="business.excursion.Excursion" scope="prototype">
		<property name="factory" ref="transportFactory" />
		<property name="nbSite" value="3" />
	</bean>

	<bean id="adrBali" parent="baseAddress">
		<property name="lat" value="-8.5069" /><property name="lon" value="115.2625" />
	</bean>

	<bean id="hotelBali" class="business.excursion.Hotel">
		<property name="nom" value="Alaya Resort" />
		<property name="prixNuit" value="180.0" />
		<property name="adresse" ref="adrBali" />
	</bean>

	<bean id="siteTemple" class="business.excursion.SiteHisto">
		<property name="nom" value="Pura Besakih" />
		<property name="description" value="Le temple mère de Bali, lieu historique, spirituel et calme." />
		<property name="adresse">
			<bean parent="baseAddress">
				<property name="lat" value="-8.3739" /><property name="lon" value="115.4511" />
			</bean>
		</property>
	</bean>
	
	<bean id="siteRizieres" class="business.excursion.SiteHisto">
	    <property name="nom" value="Rizieres de Jatiluwih" />
	    <property name="description" value="Paysage culturel magnifique, calme et historique classé UNESCO." />
	    <property name="adresse">
	        <bean parent="baseAddress">
	            <property name="lat" value="-8.3706" /><property name="lon" value="115.1305" />
	        </bean>
	    </property>
	</bean>

	<bean id="siteSurf" class="business.excursion.SitesActiv">
	    <property name="nom" value="Canggu Surf" />
	    <property name="description" value="Meilleur spot de surf pour les vagues et le sport." />
	    <property name="durationRatio" value="1.5" />
	    <property name="prix" value="10" />
	    <property name="adresse">
	        <bean parent="baseAddress">
	            <property name="lat" value="-8.6478" /><property name="lon" value="115.1385" />
	        </bean>
	    </property>
	</bean>
	
	<bean id="siteUluwatu" class="business.excursion.SiteHisto">
    <property name="nom" value="Temple d'Uluwatu" />
    <property name="description" value="Temple historique sur une falaise, singes sacrés et vue océan." />
    <property name="prix" value="15.0" />
    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.8291"/><property name="lon" value="115.0849"/></bean></property>
</bean>

	<bean id="siteTanahLot" class="business.excursion.SiteHisto">
	    <property name="nom" value="Tanah Lot" />
	    <property name="description" value="Temple historique sur l'eau, coucher de soleil spectaculaire." />
	    <property name="prix" value="20.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.6212"/><property name="lon" value="115.0868"/></bean></property>
	</bean>
	
	<bean id="siteTirtaEmpul" class="business.excursion.SiteHisto">
	    <property name="nom" value="Tirta Empul" />
	    <property name="description" value="Source sacrée, rituel de purification spirituel et zen." />
	    <property name="prix" value="12.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.4145"/><property name="lon" value="115.2894"/></bean></property>
	</bean>
	
	<bean id="siteGoaGajah" class="business.excursion.SiteHisto">
	    <property name="nom" value="Goa Gajah" />
	    <property name="description" value="Grotte de l'elephant, site historique mystique et archeologique." />
	    <property name="prix" value="10.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.5230"/><property name="lon" value="115.2861"/></bean></property>
	</bean>
	
	<bean id="sitePalaisUbud" class="business.excursion.SiteHisto">
	    <property name="nom" value="Palais d'Ubud" />
	    <property name="description" value="Residence royale historique, architecture traditionnelle et danse." />
	    <property name="prix" value="0.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.5066"/><property name="lon" value="115.2625"/></bean></property>
	</bean>
	
	<bean id="siteRafting" class="business.excursion.SitesActiv">
	    <property name="nom" value="Ayung Rafting" />
	    <property name="description" value="Sport intense en riviere, sensations fortes et nature sauvage." />
	    <property name="prix" value="45.0" /><property name="durationRatio" value="2.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.4550"/><property name="lon" value="115.2340"/></bean></property>
	</bean>
	
	<bean id="siteBatur" class="business.excursion.SitesActiv">
	    <property name="nom" value="Mont Batur Trekking" />
	    <property name="description" value="Randonnee sportive sur un volcan, vue panoramique nature." />
	    <property name="prix" value="60.0" /><property name="durationRatio" value="3.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.2417"/><property name="lon" value="115.3761"/></bean></property>
	</bean>
	
	<bean id="sitePlongee" class="business.excursion.SitesActiv">
	    <property name="nom" value="Tulamben Diving" />
	    <property name="description" value="Plongee sous-marine, sport aquatique, exploration epave." />
	    <property name="prix" value="85.0" /><property name="durationRatio" value="2.5" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.2753"/><property name="lon" value="115.5911"/></bean></property>
	</bean>
	
	<bean id="siteZipline" class="business.excursion.SitesActiv">
	    <property name="nom" value="Bali Treetop" />
	    <property name="description" value="Parcours accrobranche, sport, aventure en pleine nature." />
	    <property name="prix" value="30.0" /><property name="durationRatio" value="1.8" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.2764"/><property name="lon" value="115.1544"/></bean></property>
	</bean>
	
	<bean id="siteVelo" class="business.excursion.SitesActiv">
	    <property name="nom" value="Cycling Ubud" />
	    <property name="description" value="Balade a velo, sport doux a travers les rizieres et villages." />
	    <property name="prix" value="25.0" /><property name="durationRatio" value="2.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.4900"/><property name="lon" value="115.2500"/></bean></property>
	</bean>
	
	<bean id="siteYoga" class="business.excursion.SitesActiv">
	    <property name="nom" value="Yoga Barn" />
	    <property name="description" value="Centre de bien-etre, cours zen et relaxation spirituel." />
	    <property name="prix" value="15.0" /><property name="durationRatio" value="1.2" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.5170"/><property name="lon" value="115.2650"/></bean></property>
	</bean>
	
	<bean id="siteZoo" class="business.excursion.SitesActiv">
	    <property name="nom" value="Bali Zoo" />
	    <property name="description" value="Parc animalier, decouverte nature et animaux exotiques." />
	    <property name="prix" value="35.0" /><property name="durationRatio" value="2.2" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.5900"/><property name="lon" value="115.2650"/></bean></property>
	</bean>
	
	<bean id="siteCuisine" class="business.excursion.SitesActiv">
	    <property name="nom" value="Cooking Class" />
	    <property name="description" value="Apprentissage cuisine traditionnelle, culture locale et gout." />
	    <property name="prix" value="40.0" /><property name="durationRatio" value="1.5" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.5000"/><property name="lon" value="115.2700"/></bean></property>
	</bean>
	
	<bean id="siteCascade" class="business.excursion.SitesActiv">
	    <property name="nom" value="Gitgit Waterfall" />
	    <property name="description" value="Cascade impressionnante en pleine nature tropicale, zen." />
	    <property name="prix" value="5.0" /><property name="durationRatio" value="1.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.2000"/><property name="lon" value="115.1300"/></bean></property>
	</bean>
	
	<bean id="siteMarche" class="business.excursion.SitesActiv">
	    <property name="nom" value="Marche d'Ubud" />
	    <property name="description" value="Shopping local, artisanat, culture et ambiance animee." />
	    <property name="prix" value="0.0" /><property name="durationRatio" value="1.0" />
	    <property name="adresse"><bean parent="baseAddress"><property name="lat" value="-8.5068"/><property name="lon" value="115.2626"/></bean></property>
	</bean>

	<bean id="calcBateau" class="business.trajet.Bateau">
	    <property name="prixKm" value="2.5" /> 
	</bean>
	
	<bean id="calcBus" class="business.trajet.Bus">
	    <property name="prixFixe" value="5.0" /> 
	</bean>
	
	<bean id="transportFactory" class="business.trajet.TransportFactory">
	    <property name="strategies">
	        <map>
	            <entry key="BATEAU" value-ref="calcBateau" />
	            <entry key="AUTOBUS" value-ref="calcBus" />
	        </map>
	    </property>
	</bean>

</beans>